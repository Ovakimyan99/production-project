{
    "compilerOptions": {
        "target": "es2016",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,

        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },

        "include": [
            "./setupTest.ts"
        ],
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
