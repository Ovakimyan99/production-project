{
    "compilerOptions": {
        "target": "es2016",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true,

        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
    },

    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "jsx": "react-jsx"
        },
    },

    "include": [
        "./config/jest/setupTest.ts",
        "**/**/*.ts",
        "**/**/*.tsx"
    ],

    "exclude": [
        "node_modules"
    ]
}
